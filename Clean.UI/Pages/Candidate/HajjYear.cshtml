@page "{handler?}/{id?}"
@model Clean.UI.Pages.Candidate.HajjYearModel
@{
    ViewData["Title"] = "HajjYear";
    Layout = null;
}

<div class="panel panel-flat" style="direction: rtl;">
    <div class="panel-heading">
        <h1 class="panel-title">انتخاب متقاضی</h1>
    </div>
    <div class="panel-body" style="padding-bottom:5px;">

        <form id="dv_Candidate_HajjYear" class="form sub-form page-component" type="form" prefix="uxi" parent="dv_Profile_Profile" parentcol="CandidateID">
            <fieldset class="content-group">
                <legend class="text-bold">لطفاً مشخصات متقاضی در سال را وارد نمایید</legend>
                <div class="row">
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                سال
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <select id="uxiyearid" name="uxiYearID" class="select" asp-items="@Model.ListOfPersianYears" required>
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                ولایت
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <select id="uxiprovincesid" name="uxiProvincesID" class="select" asp-items="@Model.ListOfProvinces" required>
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                نمبر ثبت
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="uxienrollmentid" name="uxiEnrollmentID" type="number" lang="en" class="form-control search" />
                            <div class="form-control-feedback">
                                <i class="icon-search4 text-size-base"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                نمبر آرشیف
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="uxiarchiveno" name="uxiArchiveNo" type="number" lang="en" class="form-control search" />
                            <div class="form-control-feedback">
                                <i class="icon-search4 text-size-base"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>
            <hr />
            <div class="row div-form-control">
                <div class="col-md-12">
                    <div class="form-group actions">
                        <button type="button" class="btn btn-primary" action="save"><i class="icon-floppy-disk position-left"></i>ثبت معلومات</button>
                        <button type="button" class="btn btn-primary" action="search"><i class="icon-new-tab position-left"></i>جستجو</button>
                        <button type="button" class="btn btn-primary" action="new"><i class="icon-new-tab position-left"></i>صفحه جدید </button>
                    </div>
                </div>
            </div>
            <div class="form-grid">
                <table style="direction: rtl;" bindonclick="true">
                    <thead>
                        <tr>
                            <th colname="CandidateName">نام کاندید</th>
                            <th colname="YearName">سال</th>
                            <th colname="ProvincesName">ولایت</th>
                            <th colname="EnrollmentId">نمبر ثبت</th>
                            <th colname="ArchiveNo">نمبر آرشیف</th>
                        </tr>
                    </thead>

                    <tbody></tbody>
                </table>
            </div>
        </form>
    </div>
</div>

