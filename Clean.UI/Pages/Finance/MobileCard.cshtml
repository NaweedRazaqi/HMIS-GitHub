@page "{handler?}"
@model Clean.UI.Pages.Finance.MobileCard
@{
    ViewData["Title"] = "MobileCard";
}
<div class="panel panel-flat">
    @Html.AntiForgeryToken()
    <div class="panel-heading">
        <h1 class="panel-title">کارت مبایل</h1>
    </div>
    <div class="panel-body" style="padding-bottom:5px;">
        <form id="dv_Finance_MobileCard" class="form main-form page-component" type="form" prefix="ux">
            <fieldset class="content-group">
                <legend class="text-bold">مشخصات  کارت موبایل را وارد کنید </legend>
                <div class="row">
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                نام کارمند
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="uxname" name="uxName" type="text" class="form-control search" lang="ps" required />
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                نام پدر
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="uxfathername" name="uxFatherName" type="text" class="form-control search" lang="ps" required />
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                عنوان وظیفه
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="uxjobtitle" name="uxJobTitle" type="text" class="form-control search" lang="ps" required />
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                ساحه تماس
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="uxareatocontact" name="uxAreaToContact" type="text" class="form-control search" lang="ps" required />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                تعداد حاجی
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="uxnumberofhaji" name="uxNumberOfHaji" type="number" class="form-control" lang="en" required />
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                مدت به دقیقه
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="uxdurationinminutes" name="uxDurationInMinutes" type="number" class="form-control" lang="en" required />
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                مصرف هر حاجی
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="uxcostperhaji" name="uxCostPerHaji" type="number" class="form-control " lang="en" required />
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                مصرف مجموعی
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="uxtotalcost" name="uxTotalCost" type="number" class="form-control" lang="en" required />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                مجموع پرداخت شده
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="uxtotalpayebale" name="uxTotalPayebale" type="number" class="form-control" lang="en" required />
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                محل دریافت
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="uxrecievingplace" name="uxRecievingPlace" type="text" lang="ps" class="form-control" required />
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                مصرف  از بابت
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="uxspentfor" name="uxSpentFor" type="text" lang="ps" class="form-control " required />
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                مصرف  هر دقیقه
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="uxcostperminute" name="uxCostPerMinute" type="number" class="form-control " lang="en" required />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                تاریخ
                                <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="icon-calendar3"></i></span>
                                <input type="text" id="uxdate1" name="uxDate1" class="form-control Shamsi" sibling="uxdate" placeholder="تارخ به شمسی " required />
                                <input type="hidden" id="uxdate" name="uxDate" class="form-control Miladi" sibling="uxdate1" placeholder="تارخ شمسی " />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                معتمد
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <select id="uxmutamidid" name="uxMutamidID" class="select" asp-items="@Model.ListOfMutamid" required>
                                <option></option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-9 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                ملاحظات
                            </label>
                            <textarea id="uxcomments" name="uxComments" type="text" class="form-control" lang="ps"></textarea>

                        </div>
                    </div>
                </div>
            </fieldset>
            <hr />
            <div class="row div-form-control main-form-details">
                <div class="col-md-12">
                    <div class="form-group actions">
                        <button type="button" class="btn btn-primary" action="save"><i class="icon-floppy-disk position-left"></i>ثبت معلومات</button>
                        <button type="button" class="btn btn-primary" action="search"><i class="icon-search4 position-left"></i> جستجو  </button>
                        <button type="button" class="btn btn-primary" action="new"><i class="icon-new-tab position-left"></i> صفحه جدید </button>
                    </div>
                </div>
            </div>
            <div class="form-grid main-form-details">
                <table bindonclick="true">
                    <thead>
                        <tr>
                            <th colname="Name">نام کارمند</th>
                            <th colname="FatherName">نام پدر</th>
                            <th colname="JobTitle">عنوان وظیفه</th>
                            <th colname="MutamidName">معتمد</th>
                            <th colname="NumberOfHaji">تعداد حاجی</th>
                            <th colname="CostPerMinute">مصرف هر دقیقه</th>
                            <th colname="DurationInMinutes">مدت به دقیقه</th>
                            <th colname="CostPerHaji">مصرف هر حاجی</th>
                            <th colname="TotalCost">مصرف مجموعی</th>
                            <th colname="TotalPayebale">مجموع پرداخت شده</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </form>
    </div>
</div>