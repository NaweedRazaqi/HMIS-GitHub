@page "{handler?}"
@model Clean.UI.Pages.Finance.ContractInstallmentModel
@{
    ViewData["Title"] = "ContractInstallment";
}
<div class="panel panel-flat">
    @Html.AntiForgeryToken()
    <div class="panel-heading">
        <h1 class="panel-title">قرار داد تعرفه</h1>
    </div>
    <div class="panel-body" style="padding-bottom:5px;">
        <form id="dv_Finance_ContractInstallment" class="form main-form page-component" type="form" prefix="ux">
            <fieldset class="content-group">
                <legend class="text-bold">مشخصات قرار داد تعرفه را وارد کنید </legend>
                <input type="hidden" id="uxbid" />
                <div class="row">
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                نمبر تعرفه
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="uxinstallmentno" name="uxInstallmentNo" type="text" class="form-control search" required />
                            <div class="form-control-feedback">
                                <i class="icon-search4 text-size-base"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                سال تعرفه
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <select id="uxyearid" name="uxYearID" class="select" asp-items="@Model.ListOfPersianYears" required>
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                واحد پولی
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <select id="uxcurrencyid" name="uxCurrencyID" class="select" asp-items="@Model.ListOfCurrency" required>
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                مقدار
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="uxamount" name="uxAmount" type="text" class="form-control search" required />
                            <div class="form-control-feedback">
                                <i class="icon-search4 text-size-base"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                نرخ تبادله
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="uxexchangerate" name="uxExchangeRate" type="text" class="form-control search" required />
                            <div class="form-control-feedback">
                                <i class="icon-search4 text-size-base"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                مقدار تبادله شده
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="uxexchangedamount" name="uxExchangedAmount" type="text" class="form-control search" required />
                            <div class="form-control-feedback">
                                <i class="icon-search4 text-size-base"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                فیصدی تکس
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="uxtaxpercentage" name="uxTaxPercentage" type="text" class="form-control search" required />
                            <div class="form-control-feedback">
                                <i class="icon-search4 text-size-base"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                تکس
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="uxtax" name="uxTax" type="text" class="form-control search" required />
                            <div class="form-control-feedback">
                                <i class="icon-search4 text-size-base"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                سکتور خصوصی
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="uxprivatesector" name="uxPrivateSector" type="text" class="form-control search" required />
                            <div class="form-control-feedback">
                                <i class="icon-search4 text-size-base"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                فیصدی سکتور خصوصی
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="uxprivatesectorpercentage" name="uxPrivateSectorPercentage" type="text" class="form-control search" required />
                            <div class="form-control-feedback">
                                <i class="icon-search4 text-size-base"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                جریمه
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="uxpenalty" name="uxPenalty" type="text" class="form-control search" required />
                            <div class="form-control-feedback">
                                <i class="icon-search4 text-size-base"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                مقدار خالص
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="uxnetamount" name="uxNetAmount" type="text" class="form-control search" required />
                            <div class="form-control-feedback">
                                <i class="icon-search4 text-size-base"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                تاریخ
                                <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-addon"><i class="icon-calendar3"></i></span>
                                <input type="text" id="uxdate1" name="uxDate1" class="form-control Shamsi" sibling="uxdate" placeholder="تارخ به شمسی " required />
                                <input type="hidden" id="uxdate" name="uxDate" class="form-control Miladi" sibling="uxdate1" placeholder="تارخ شمسی " />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                قرار داد 
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <select id="uxcontractid" name="uxContractID" class="select" asp-items="@Model.ListOfContract" required>
                                <option></option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-9 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                ملاحظات
                            </label>
                            <textarea id="uxcomments" name="uxComments" type="text" class="form-control" lang="ps"></textarea>
                            @*<div class="form-control-feedback">
                                <i class="icon-search4 text-size-base"></i>
                            </div>*@
                        </div>
                    </div>
                </div>
            </fieldset>
            <hr />
            <div class="row div-form-control main-form-details">
                <div class="col-md-12">
                    <div class="form-group actions">
                        <button type="button" class="btn btn-primary" action="save"><i class="icon-floppy-disk position-left"></i>ثبت معلومات</button>
                        <button type="button" class="btn btn-primary" action="search"><i class="icon-search4 position-left"></i> جستجو  </button>
                        <button type="button" class="btn btn-primary" action="new"><i class="icon-new-tab position-left"></i> صفحه جدید </button>
                    </div>
                </div>
            </div>
            <div class="form-grid main-form-details">
                <table bindonclick="true">
                    <thead>
                        <tr>
                            <th colname="ContractName">قرار داد</th>
                            <th colname="InstallmentNo">نمبر تعرفه</th>
                            <th colname="CurrencyName">واحد پولی</th>
                            <th colname="YearName">سال</th>
                            <th colname="DateShamsi">تاریخ</th>
                            <th colname="Amount">مقدار</th>
                            <th colname="ExchangedAmount">مقدار تبادله شده</th>
                            <th colname="PrivateSector">سکتور خصوصی</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>

        </form>
    </div>
</div>