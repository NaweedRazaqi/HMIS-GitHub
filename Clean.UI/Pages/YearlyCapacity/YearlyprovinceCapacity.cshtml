@page "{handler?}/{id?}"
@model Clean.UI.Pages.YearlyCapacity.YearlyprovinceCapacityModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@{
    ViewData["Title"] = "YearlyprovinceCapacity";
    Layout = null;
}
<div class="panel panel-flat" style="direction:rtl;">
    <div class="panel-heading">
        <h1 class="panel-title">ظرفیت سالانه پروسه حج</h1>
    </div>
    <div class="panel-body" style="padding-bottom:5px;">
        <form id="dv_YearlyCapacity_YearlyprovinceCapacity" class="form sub-form page-component" type="form" prefix="ux"  parent="dv_YearlyCapacity_YearlyCapacity" parentcol="TotalId">
            <fieldset class="content-group">
                <legend class="text-bold">مشخصات  وارد کنید </legend>
                <div class="row">
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                نوع کامتقاضی
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <select id="uxcandidatetypeid" name="uxCandidateTypeId" class="select search" asp-items="@Model.ListOfCandidateTypes" required>
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                ولایت
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <select id="uxprovinceid" name="uxProvinceId" class="select search" asp-items="@Model.ListOfProvinces" required>
                                <option></option>
                            </select>
                        </div>
                    </div>
                    
                        <div class="col-md-3 col-sm-12 col-xs-12 ">
                            <div class="form-group has-feedback has-feedback-left">
                                <label class="text-bold">
                                    سال
                                    <span class="text-danger">&nbsp;*</span>
                                </label>
                                <select id="uxyearid" name="uxYearId" class="select" asp-items="@Model.ListOfPersianYears">
                                    <option></option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-12 col-xs-12 ">
                            <div class="form-group has-feedback has-feedback-left">
                                <label class="text-bold">
                                    سهمیه ولایات
                                    <span class="text-danger">&nbsp;*</span>
                                </label>
                                <input id="uxprovincecapacity" name="uxProvinceCapacity" type="number" class="form-control " required />
                                <div class="form-control-feedback">
                                    <i class="icon-search4 text-size-base"></i>
                                </div>
                            </div>
                        </div>

                    </div>
</fieldset>
            <hr />
            <div class="row div-form-control main-form-details">
                <div class="col-md-12">
                    <div class="form-group actions">
                        <button type="button" class="btn btn-primary" action="save"><i class="icon-floppy-disk position-left"></i> ثبت معلومات </button>
                        <button type="button" class="btn btn-primary" action="search"><i class="icon-search4 position-left"></i> جستجو  </button>
                        <button type="button" class="btn btn-primary" action="new"><i class="icon-new-tab position-left"></i> صفحه جدید </button>
                    </div>
                </div>
            </div>
            <div class="form-grid main-form-details">
                <table bindonclick="true">
                    <thead>
                        <tr>
                            <th colname="CandidateTypeIdText"> نوع متقاضی </th>
                            <th colname="Provinces"> ولایت </th>
                            <th colname="YearName"> سال </th>
                            <th colname="ProvinceCapacity"> سهمیه ولایات </th>
                            <th colname="Remain">ظرفیت باقی مانده </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </form>
    </div>
</div>