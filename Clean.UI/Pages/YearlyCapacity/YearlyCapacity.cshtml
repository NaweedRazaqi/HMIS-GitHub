@page "{handler?}/{id?}"
@model Clean.UI.Pages.YearlyCapacity.YearlyCapacity
@{
    ViewData["Title"] = "YearlyCapacity";
}
<div class="panel panel-flat" style="direction:rtl;">
    @Html.AntiForgeryToken()
    <div class="panel-heading">
        <h1 class="panel-title">ظرفیت سالانه پروسه حج</h1>
    </div>
    <div class="panel-body" style="padding-bottom:5px;">
        <form id="dv_YearlyCapacity_YearlyCapacity" class="form main-form page-component" type="form" prefix="ux">
            <fieldset class="content-group">
                <legend class="text-bold">مشخصات  وارد کنید </legend>
                <div class="row">
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                سال
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <select id="uxyearid" name="uxYearId" class="select search" asp-items="@Model.ListOfPersianYears" required>
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                مجموعه سهمیه افغانستان
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="uxtotalcapacity" name="uxTotalCapacity" type="number" class="form-control search" lang="ps" required />
                            <div class="form-control-feedback">
                                <i class="icon-search4 text-size-base"></i>
                            </div>
                        </div>
                    </div>

                </div>
            </fieldset>
            <hr />
            <div class="row div-form-control main-form-details">
                <div class="col-md-12">
                    <div class="form-group actions">
                        <button type="button" class="btn btn-primary" action="save"><i class="icon-floppy-disk position-left"></i> ثبت معلومات </button>
                        <button type="button" class="btn btn-primary" action="search"><i class="icon-search4 position-left"></i> جستجو  </button>
                        <button type="button" class="btn btn-primary" action="new"><i class="icon-new-tab position-left"></i> صفحه جدید </button>
                    </div>
                </div>
            </div>
            <div class="form-grid main-form-details">
                <table bindonclick="true">
                    <thead>
                        <tr>
                            <th colname="YearName"> سال </th>
                            <th colname="TotalCapacity"> مجموعه ظرفیت</th>
                            <th colname="Remain">  ظرفیت باقی مانده</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </form>
    </div>
    <div class="page-sidebar page-component" type="actionmenu">
        <ul class="navigation navigation-accordion">
            @Html.Raw(@Model.SubScreens)
        </ul>
    </div>
</div>