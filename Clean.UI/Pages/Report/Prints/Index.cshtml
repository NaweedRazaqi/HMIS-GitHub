                        <th> اسم حاجی&nbsp;&nbsp;&nbsp;<span></span></th>
                    </tr>
                    <tr style="align-content:center">
                        <td>@Model.CProvinceName</td>
                        <td>@Model.CDistrictName</td>
                        <td>@Model.PProvinceName</td>
                        <td>@Model.PDistrictName </td>
                        <td>@Model.CandidateName</td>

                    </tr>
            </table>
            <table>
                <tr>
                    <th align="center" valign="middle" class="Middlelabel">شهرت اقارب</th>
                </tr>
            </table>
            <table width="100%" class="table-bordered" dir="rtl">
                <tbody style="border:1px solid; direction:rtl">

                    <tr>
                        <th> اسم  &nbsp;&nbsp;&nbsp;<span></span></th>
                        <th> ولد  <span></span></th>
                        <th> قرابت  &nbsp;&nbsp;&nbsp;<span></span></th>
                        <th> ولایت  &nbsp;&nbsp;&nbsp;<span></span></th>
                        <th> ولسوالی  &nbsp;&nbsp;&nbsp;<span></span></th>
                        <th> آدرس مکمل  &nbsp;&nbsp;&nbsp;<span></span></th>
                    </tr>
                    <tr style="align-content:center">
                        <td>@Model.rFirstName</td>
                        <td>@Model.rLastName</td>
                        <td>@Model.RelationshipName</td>
                        <td>@Model.ProvincesName</td>
                        <td>@Model.DistrictName </td>
                        <td>@Model.FullAddress =</td>
                    </tr>
            </table>

        </div>
        <script>
            $(document).ready(function () {
                var Code = $('#code_print').val();
                var Hajj = "HMIS-Hajj";
                JsBarcode("#barcode1", `${Hajj}${Code}`);
            });
