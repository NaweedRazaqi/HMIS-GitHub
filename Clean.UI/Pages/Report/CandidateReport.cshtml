@page "{handler?}/{id?}"
@model Clean.UI.Pages.Candidate.CandidateModel
@{
    ViewData["Title"] = "Candidate";

}
<div class="panel panel-flat">
    @Html.AntiForgeryToken()
    <div class="panel-heading">
        <h1 class="panel-title">شهرت حاجی یا ناظم</h1>
    </div>
    <div class="panel-body" style="padding-bottom:5px;">
        <form id="dv_Report_CandidateReport" class="form main-form page-component" type="form" prefix="ux">
            <fieldset class="content-group">
                <legend class="text-bold">مشخصات حاجی یا ناظم را وارد کنید </legend>

                <div class="row">
                    <div class="col-lg-10">
                        <div class="row">
                            <div class="col-md-3 col-sm-12 col-xs-12 ">
                                <div class="form-group has-feedback has-feedback-left">
                                    <label class="text-bold">
                                        نمبر تشخیصیه
                                    </label>
                                    <input id="uxcode" name="uxCode" type="text" class="form-control search" />
                                    <div class="form-control-feedback">
                                        <i class="icon-search4 text-size-base"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-12 col-xs-12 ">
                                <div class="form-group has-feedback has-feedback-left">
                                    <label class="text-bold">
                                        نمبر ولایتی
                                    </label>
                                    <input id="uxarchiveno" name="uxArchiveNo" type="number" class="form-control search" />
                                    <div class="form-control-feedback">
                                        <i class="icon-search4 text-size-base"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-12 col-xs-12 ">
                                <div class="form-group has-feedback has-feedback-left">
                                    <label class="text-bold">
                                        لسان مادری
                                        <span class="text-danger">&nbsp;*</span>
                                    </label>

                                    <select id="uxlanguageid" name="LanguageId" asp-items="@Model.ListOfLanguage" class="select" required>
                                        <option></option>
                                    </select>
                                    <div class="form-control-feedback">
                                        <i class="icon-search4 text-size-base"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-12 col-xs-12 ">
                                <div class="form-group has-feedback has-feedback-left">
                                    <label class="text-bold">
                                        نوعیت کاندید
                                        <span class="text-danger">&nbsp;*</span>
                                    </label>
                                    <select id="uxcandidatetypeid" name="uxCandidateTypeID" class="select search" asp-items="@Model.ListOfCandidateTypes" required>
                                        <option></option>
                                    </select>
                                    <div class="form-control-feedback">
                                        <i class="icon-search4 text-size-base"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 col-sm-12 col-xs-12 ">
                                <div class="form-group has-feedback has-feedback-left">
                                    <label class="text-bold">
                                        نام
                                        <span class="text-danger">&nbsp;*</span>
                                    </label>
                                    <input id="uxfirstname" name="uxFirstName" type="text" class="form-control search" required />
                                    <div class="form-control-feedback">
                                        <i class="icon-search4 text-size-base"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-12 col-xs-12 ">
                                <div class="form-group has-feedback has-feedback-left">
                                    <label class="text-bold">
                                        تخلص
                                        <span class="text-danger">&nbsp;*</span>
                                    </label>
                                    <input id="uxlastname" name="uxLastName" type="text" class="form-control search" required />
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-12 col-xs-12 ">
                                <div class="form-group has-feedback has-feedback-left">
                                    <label class="text-bold">
                                        نام پدر
                                        <span class="text-danger">&nbsp;*</span>
                                    </label>
                                    <input id="uxfathername" name="uxFatherName" type="text" class="form-control search" required />
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-12 col-xs-12 ">
                                <div class="form-group has-feedback has-feedback-left">
                                    <label class="text-bold">
                                        نام پدرکلان
                                        <span class="text-danger">&nbsp;*</span>
                                    </label>
                                    <input id="uxgrandfathername" name="uxGrandFatherName" type="text" class="form-control search" required />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 col-sm-12 col-xs-12 ">
                                <div class="form-group has-feedback has-feedback-left">
                                    <label class="text-bold">
                                        نام انگلیسی
                                        <span class="text-danger">&nbsp;*</span>
                                    </label>
                                    <input id="uxfirstnameenglish" name="uxFirstNameEnglish" type="text" class="form-control" lang="en" required />
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-12 col-xs-12 ">
                                <div class="form-group has-feedback has-feedback-left">
                                    <label class="text-bold">
                                        تخلص انگلیسی
                                        <span class="text-danger">&nbsp;*</span>
                                    </label>
                                    <input id="uxlastnameenglish" name="uxLastNameEnglish" type="text" class="form-control" lang="en" required />
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-12 col-xs-12 ">
                                <div class="form-group has-feedback has-feedback-left">
                                    <label class="text-bold">
                                        نام پدر انگلیسی
                                        <span class="text-danger">&nbsp;*</span>
                                    </label>
                                    <input id="uxfathernameenglish" name="uxFatherNameEnglish" type="text" class="form-control " lang="en" required />
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-12 col-xs-12 ">
                                <div class="form-group has-feedback has-feedback-left">
                                    <label class="text-bold">
                                        نام پدرکلان به انگلیسی
                                        <span class="text-danger">&nbsp;*</span>
                                    </label>
                                    <input id="uxgrandfathernameenglish" name="GrandFatherNameEnglish" type="text" lang="en" class="form-control" required />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 pull-right">
                        <div id="uxPhoto" class="img-uploader" data-type="photo" data-ref="uxphotopath">
                        </div>
                        <input type="hidden" class="output" id="uxphotopath" />
                    </div>
                </div>
                <div class="main-form-details">
                    <div class="row">
                        <div class="col-md-3 col-sm-12 col-xs-12 ">
                            <div class="form-group has-feedback has-feedback-left">
                                <label class="text-bold">
                                    تاریخ تولد
                                    <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="icon-calendar3"></i></span>
                                    <input type="text" id="uxbirthdate1" name="uxBirthDate1" class="form-control Shamsi" sibling="uxbirthdate" placeholder="تارخ تولد شمسی " required />
                                    <input type="hidden" id="uxbirthdate" name="uxBirthDate" class="form-control Miladi" sibling="uxbirthdate1" placeholder="تارخ تولد شمسی " />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-12 col-xs-12 ">
                            <div class="form-group has-feedback has-feedback-left">
                                <label class="text-bold">
                                    گروپ خون
                                    <span class="text-danger">&nbsp;*</span>
                                </label>
                                <select id="uxbloodgroupid" name="uxBloodGroupID" class="select" asp-items="@Model.ListOfBloodGroups" required>
                                    <option></option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-12 col-xs-12 ">
                            <div class="form-group has-feedback has-feedback-left">
                                <label class="text-bold">
                                    جنسیت
                                    <span class="text-danger">&nbsp;*</span>
                                </label>
                                <select id="uxgenderid" name="uxGenderId" class="select" asp-items="@Model.ListOfGenders" required>
                                    <option></option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-12 col-xs-12 ">
                            <div class="form-group has-feedback has-feedback-left">
                                <label class="text-bold">
                                    حالت مدنی
                                    <span class="text-danger">&nbsp;*</span>
                                </label>
                                <select id="uxmaritalstatusid" name="uxMaritalStatusId" class="select" asp-items="@Model.ListOfMaritalStatus" required>
                                    <option></option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-3 col-sm-12 col-xs-12 ">
                            <div class="form-group has-feedback has-feedback-left">
                                <label class="text-bold">
                                    مذهب
                                    <span class="text-danger">&nbsp;*</span>
                                </label>
                                <select id="uxreligionid" name="uxReligionId" class="select" asp-items="@Model.ListOfReligions" required>
                                    <option></option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-12 col-xs-12 ">
                            <div class="form-group has-feedback has-feedback-left">
                                <label class="text-bold">
                                    محرم
                                </label>
                                <select id="uxmahramid" name="uxMahramID" asp-items="@Model.ListOfCandidate" class="select">
                                    <option></option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-12 col-xs-12 ">
                            <div class="form-group has-feedback has-feedback-left">
                                <label class="text-bold">
                                    نوع قرابت
                                </label>
                                <select id="uxrelationshipid" name="uxRelationshipID" asp-items="@Model.ListOfRelationShip" class="select">
                                    <option></option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row nid-row">
                        <div class="col-md-3 col-sm-12 col-xs-12 national-id">
                            <div class="form-group">
                                <label class="text-bold">
                                    نوع تذکره
                                    <span class="text-danger">&nbsp;*</span>
                                </label>
                                <select id="uxdocumenttypeid" name="uxdocumenttypeid" asp-items="@Model.ListOfDocumentTypes" class="select" required>
                                    <option></option>
                                </select>
                                <input type="hidden" id="uxnid" class="national-id-input" sibling="uxdocumenttypeid" name="uxnid" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-10 col-sm-12 col-xs-12 ">
                            <div class="form-group has-feedback has-feedback-left">
                                <label class="text-bold">
                                    ملاحظات
                                </label>
                                <textarea id="uxremarks" name="uxRemarks" type="text" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>
            <hr />
            <div class="row div-form-control main-form-details">
                <div class="col-md-12">
                    <div class="form-group actions">
                        <button type="button" class="btn btn-primary pull-right" id="_print" action="print"><i class="icon-new-tab position-right"></i>پرنت معلومات کاندید  </button>
                        <button type="button" class="btn btn-primary" action="search"><i class="icon-search4 position-left"></i> جستجو  </button>

                    </div>
                </div>
            </div>
            <div class="form-grid main-form-details">
                <table bindonclick="true" filter="true">
                    <thead>
                        <tr>
                            <th colname="code"> کود </th>
                            <th colname="firstname"> نام </th>
                            <th colname="lastname"> تخلص </th>
                            <th colname="fathername"> نام پدر </th>
                            <th colname="grandfathername"> نام پدر کلان </th>
                            <th colname="gendername"> جنسیت </th>
                            <th colname="religionName"> مذهب </th>
                            <th colname="candidateTypeName"> نوعیت کاندید </th>
                            <th colname="NIDText">سند هویت</th>
                            <th colname="IsSelected"> انتخاب شده </th>
                            <th colname="EnrollmentDate"> تاریخ ثبت نام </th>
                            <th colname="age"> سن </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>

        </form>
    </div>

</div>

