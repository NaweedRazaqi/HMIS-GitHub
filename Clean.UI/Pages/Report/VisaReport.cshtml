@page "{handler?}"
@model Clean.UI.Pages.Report.VisaReportModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@{
    ViewData["Title"] = "VisaReport";
}
<div class="panel panel-flat">
    @Html.AntiForgeryToken()
    <div class="panel-heading">
        <h1 class="panel-title">گذارش ویزه های داده شده</h1>
    </div>
    <div class="panel-body" style="padding-bottom:5px;">
        <form id="dv_Report_CandidateReport" class="form main-form page-component" type="form" prefix="ux">
            <fieldset class="content-group">
                <legend class="text-bold">گذارش تعداد ویزه های صادر شده را نظر به ولایت از این صفحه بدست آورد. </legend>

                <div class="row">
                    <div class="col-lg-10">
                        <div class="row">
                            <div class="col-md-3 col-sm-12 col-xs-12 ">
                                <div class="form-group has-feedback has-feedback-left">
                                    <label class="text-bold">
                                        @_localizer["ولایت"]
                                        <span class="text-danger">&nbsp;*</span>
                                    </label>
                                    <select id="uxjprovinceid" name="uxjProvinceId" child="uxjdistrictid" class="select " asp-items="@Model.ListOfProvinces">
                                        <option></option>
                                    </select>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>
            <hr />
            <div class="row div-form-control main-form-details">
                <div class="col-md-12">
                    <div class="form-group actions">
                        <button type="button" class="btn btn-primary pull-right" id="_print" action="print"><i class="icon-new-tab position-right"></i>پرنت معلومات کاندید  </button>
                        <button type="button" class="btn btn-primary" action="search"><i class="icon-search4 position-left"></i> جستجو  </button>

                    </div>
                </div>
            </div>
            <div class="form-grid main-form-details">
                <table bindonclick="true" filter="true">
                    <thead>
                        <tr>
                            <th colname="code"> کود </th>
                            <th colname="firstname"> نام </th>
                            <th colname="lastname"> تخلص </th>>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>

        </form>
    </div>
    <div class="page-sidebar page-component" type="actionmenu">
        <ul class="navigation navigation-accordion">
            @Html.Raw(@Model.SubScreens)
        </ul>
    </div>
</div>