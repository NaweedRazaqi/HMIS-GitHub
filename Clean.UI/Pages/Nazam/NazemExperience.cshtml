@page "{handler?}/{id?}"
@model Clean.UI.Pages.Nazam.NazemExperienceModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@{
    ViewData["Title"] = "NazamToMosque";
    Layout = null;
}


<div class="panel panel-flat" style="direction: rtl;">
    <div class="panel-heading">
        <h1 class="panel-title">تجربه ناظم را وارد نمایید</h1>
    </div>
    <div class="panel-body" style="padding-bottom:5px;">

        <form id="dv_Nazam_NazemExperience" class="form sub-form page-component" type="form" prefix="uxe" parent="dv_Profile_Profile" parentcol="CandidateId">
            <fieldset class="content-group">
                <legend class="text-bold">لطفاً مشخصات تجربه ناظم را وارد نمایید که ناظم از قبل به حج رفته باشد</legend>
                <div class="row">
                    <div class="col-md-4 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                تجربه قبلی از حج
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <input id="uxeprevousehajcount" name="uxePrevouseHajCount" type="number" class="form-control search" lang="ps" required />
                            <div class="form-control-feedback">
                                <i class="icon-search4 text-size-base"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                نوع مصرف
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <select id="uxeexpensetype" name="uxeExpenseType" class="select" >
                                <option value="0">--</option>
                                <option value="1">مصرف شخصی</option>
                                <option value="2">از طرف وزارت حج و اوقاف</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12 col-xs-12 ">
                        <div class="form-group has-feedback has-feedback-left">
                            <label class="text-bold">
                                 سال
                                <span class="text-danger">&nbsp;*</span>
                            </label>
                            <select id="uxeyearid" name="uxeYearId" class="select search" asp-items="@Model.ListOfPersianYears" >
                                <option></option>
                            </select>
                        </div>
                    </div>
                </div>
            </fieldset>
            <hr />
            <div class="row div-form-control">
                <div class="col-md-12">
                    <div class="form-group actions">
                        <button type="button" class="btn btn-primary" action="save"><i class="icon-floppy-disk position-left"></i>ثبت معلومات</button>
                        <button type="button" class="btn btn-primary" action="search"><i class="icon-new-tab position-left"></i>جستجو</button>
                        <button type="button" class="btn btn-primary" action="new"><i class="icon-new-tab position-left"></i>صفحه جدید </button>
                    </div>
                </div>
            </div>
            <div class="form-grid">
                <table style="direction: rtl;" bindonclick="true">
                    <thead>
                        <tr>
                            <th colname="CandidateName">نام ناظم</th>
                            <th colname="PrevouseHajCount">تجربه قبلی از حج</th>
                            <th colname="ExpenseTypeText">نوع مصرف</th>
                            <th colname="YearName">سال</th>
                        </tr>
                    </thead>

                    <tbody></tbody>
                </table>
            </div>
        </form>

    </div>
</div>

