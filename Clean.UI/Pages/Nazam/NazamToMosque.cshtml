@page "{handler?}/{id?}"

@model Clean.UI.Pages.Nazam.NazamToMosqueModel

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer
@{
    ViewData["Title"] = "NazamToMosque";
    Layout = null;
}

<div class="panel panel-flat" style="direction: rtl;">
    <div class="panel-heading">
        <h1 class="panel-title">تعین ناظم به مسجد</h1>
    </div>
    <div class="panel-body" style="padding-bottom:5px;">
            <form id="dv_Nazam_NazamToMosque" class="form sub-form page-component" type="form" prefix="uxM" parent="dv_Nazam_Nazim" parentcol="CandidateId">
                <fieldset class="content-group">
                    <legend class="text-bold">لطفاً تعین ناظم به مسجد را وارد نمایید</legend>
                    <div class="row">
                        <div class="col-md-4 col-sm-12 col-xs-12 ">
                            <div class="form-group has-feedback has-feedback-left">
                                <label class="text-bold">
                                    اسم مسجد
                                    <span class="text-danger">&nbsp;*</span>
                                </label>
                                <select id="uxMmosqueid" name="uxMMosqueID" class="select" asp-items="@Model.ListOfMosque" required>
                                    <option></option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12 col-xs-12 ">
                            <div class="form-group has-feedback has-feedback-left">
                                <label class="text-bold">
                                    موقیعت
                                    <span class="text-danger">&nbsp;*</span>
                                </label>
                                <select id="uxMlocationid" name="uxMLocationId" class="select" asp-items="@Model.ListOfProvinces" required>
                                    <option></option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12 col-xs-12 ">
                            <div class="form-group">
                                <label class="text-bold">
                                    @_localizer[" وقت اجماع"]
                                    <span class="text-danger">&nbsp;*</span>
                                </label>
                                <select id="uxMtrainingtime" name="uxMTrainingTime" class="select">
                                    <option value="0">--</option>
                                    <option value="1">قبل از ظهر</option>
                                    <option value="2">بعد از ظهر</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <hr />
                <div class="row div-form-control">
                    <div class="col-md-12">
                        <div class="form-group actions">
                            <button type="button" class="btn btn-primary" action="save"><i class="icon-floppy-disk position-left"></i>ثبت معلومات</button>
                            <button type="button" class="btn btn-primary" action="search"><i class="icon-new-tab position-left"></i>جستجو</button>
                            <button type="button" class="btn btn-primary" action="new"><i class="icon-new-tab position-left"></i>صفحه جدید </button>
                        </div>
                    </div>
                </div>
                <div class="form-grid">
                    <table style="direction: rtl;" bindonclick="true">
                        <thead>
                            <tr>
                                <th colname="CandidateName">نام ناظم</th>
                                <th colname="MosqueName">نام مسجد مربوطه</th>
                            </tr>
                        </thead>

                        <tbody></tbody>
                    </table>
                </div>
            </form>

    </div>
</div>

